{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"baseUrl": ".",
		"rootDir": ".",
		"declaration": true,
		"allowJs": true,
		"declarationMap": false,
		"noEmit": true,
		"outDir": "./dist",
		"typeRoots": ["./node_modules/@types", "./types"],
		"paths": {}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", ".yarn", ".vscode", ".github"],
	"ts-node": {
		"require": ["typescript-transform-paths/register"],
		"transpileOnly": true,
		"moduleTypes": {
			"jest.config.ts": "cjs"
		}
	}
}
